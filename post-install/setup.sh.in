# Source this file if using sh or a shell derived from it

export OSG_LOCATION="@@OSG_LOCATION@@"
export GLOBUS_LOCATION="$OSG_LOCATION/usr"
export PATH="$OSG_LOCATION/usr/bin:$OSG_LOCATION/usr/sbin:$PATH"
if [ x86_64 = `uname -m` ]; then
    OSG_LD_LIBRARY_PATH="$OSG_LOCATION/usr/lib64:$OSG_LOCATION/lib64:$OSG_LOCATION/usr/lib"
else
    OSG_LD_LIBRARY_PATH="$OSG_LOCATION/usr/lib:$OSG_LOCATION/lib"
fi
if [ "X" != "X${LD_LIBRARY_PATH-}" ]; then
    export LD_LIBRARY_PATH="${OSG_LD_LIBRARY_PATH}:$LD_LIBRARY_PATH"
else
    export LD_LIBRARY_PATH="${OSG_LD_LIBRARY_PATH}"
fi
unset OSG_LD_LIBRARY_PATH

if grep -q ' 6\.' /etc/redhat-release; then
    OSG_PERL5LIB="$OSG_LOCATION/usr/share/perl5/vendor_perl:$OSG_LOCATION/usr/share/perl5"
else
    OSG_PERL5LIB="$OSG_LOCATION/usr/lib/perl5/vendor_perl/5.8.8"
fi

if [ "X" != "X${PERL5LIB-}" ]; then
    export PERL5LIB="${OSG_PERL5LIB}:$PERL5LIB"
else
    export PERL5LIB="${OSG_PERL5LIB}"
fi
unset OSG_PERL5LIB

export X509_CERT_DIR="$OSG_LOCATION/etc/grid-security/certificates"
export X509_VOMS_DIR="$OSG_LOCATION/etc/grid-security/vomsdir"
export VOMS_USERCONF="$OSG_LOCATION/etc/vomses"

